<Window x:Class="MedLabTab.Views.MainViews.MainViewNurse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedLabTab.Views.MainViews"
        mc:Ignorable="d"
        Title="Pielęgniarka" Height="600" Width="1000"
        Background="#f8f5ff">
    <Window.Resources>
        <!-- Style dla przycisków nawigacyjnych -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF69B4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter Margin="{TemplateBinding Padding}" 
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE6F0"/>
                                <Setter Property="Foreground" Value="#FF69B4"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFD6E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dla głównego nagłówka -->
        <Style x:Key="MainHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Style dla przycisku wylogowania -->
        <Style x:Key="LogoutButtonStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Background" Value="#FFF0F0"/>
            <Setter Property="Foreground" Value="#FF5555"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5">
                            <ContentPresenter Margin="{TemplateBinding Padding}" 
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE0E0"/>
                                <Setter Property="Foreground" Value="#FF3333"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFD0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Pasek nawigacyjny (lewa strona) -->
        <Border Grid.Column="0" Background="White" BorderBrush="#EEEEEE" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo i nazwa -->
                <StackPanel Grid.Row="0" Margin="0,20,0,20">
                    <TextBlock Text="MedLabTab" FontSize="22" FontWeight="Bold" Foreground="#FF69B4" HorizontalAlignment="Center"/>
                    <TextBlock Text="System laboratoryjny" FontSize="12" Foreground="#888888" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Menu nawigacyjne -->
                <StackPanel Grid.Row="1" Margin="10,20,10,0">
                    <!-- Przycisk BADANIA -->
                    <Button Style="{StaticResource NavButtonStyle}" 
                            x:Name="btnExams" 
                            Content="BADANIA"
                            FontWeight="SemiBold"
                            Click="BtnExams_Click"
                            Margin="0,5,0,5"/>

                    <!-- Przycisk PRÓBKI -->
                    <Button Style="{StaticResource NavButtonStyle}" 
                            x:Name="btnSamples" 
                            Content="PRÓBKI"
                            FontWeight="SemiBold"
                            Click="BtnSamples_Click"
                            Margin="0,5,0,5"/>

                    <!-- Przycisk PROFIL -->
                    <Button Style="{StaticResource NavButtonStyle}" 
                            x:Name="btnProfile" 
                            Content="PROFIL"
                            FontWeight="SemiBold"
                            Click="BtnProfile_Click"
                            Margin="0,5,0,5"/>
                    
                    <!-- Przycisk wylogowania -->
                    <Button Style="{StaticResource LogoutButtonStyle}" 
                            Content="Wyloguj się" 
                            x:Name="btnLogout"
                            Click="BtnLogout_Click"
                            Margin="0,290,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Główna treść (prawa strona) -->
        <Grid Grid.Column="1">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#f8f5ff" Offset="0"/>
                    <GradientStop Color="#fff0f5" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Nagłówek strony -->
            <StackPanel>
                <TextBlock Style="{StaticResource MainHeaderStyle}" Text="PIELĘGNIARKA" HorizontalAlignment="Center"/>
                <Border Height="1" Background="#EEEEEE" Margin="20,0"/>

                <!-- Dynamiczna zawartość -->
                <Grid x:Name="ContentArea" Margin="20">
                    <!-- Domyślna zawartość - lista badań -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="NADCHODZĄCE BADANIA" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15"/>

                        <DataGrid Grid.Row="1" 
                                  x:Name="TestsDataGrid"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  HeadersVisibility="Column"
                                  BorderThickness="0"
                                  Background="Transparent">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nazwa badania" 
                                                   Binding="{Binding TestName}" 
                                                   Width="*"/>
                                <DataGridTextColumn Header="Kategoria" 
                                                   Binding="{Binding CategoryNavigation.CategoryName}" 
                                                   Width="*"/>
                                <DataGridTextColumn Header="Opis" 
                                                   Binding="{Binding Description}" 
                                                   Width="2*"/>
                                <DataGridTextColumn Header="Cena" 
                                                   Binding="{Binding Price, StringFormat='{}{0:C}'}" 
                                                   Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>