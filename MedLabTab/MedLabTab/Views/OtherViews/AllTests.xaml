<Window x:Class="MedLabTab.Views.OtherViews.AllTests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Badania" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Tytuł -->
            <RowDefinition Height="*"/>
            <!-- Tabela -->
            <RowDefinition Height="Auto"/>
            <!-- Przycisk Dodaj -->
        </Grid.RowDefinitions>

        <!-- Tytuł -->
        <TextBlock Text="Badania" Grid.Row="0" Margin="0,20,0,10"
                   HorizontalAlignment="Center" FontSize="26" FontWeight="Bold"/>

        <!-- Tabela -->
        <DataGrid x:Name="BadaniaDataGrid" Grid.Row="1"
                  AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nazwa" Binding="{Binding Nazwa}" Width="*" />
                <DataGridTextColumn Header="Opis" Binding="{Binding Opis}" Width="2*" />
                <DataGridTextColumn Header="Koszt" Binding="{Binding Koszt}" Width="*" />
                <DataGridTextColumn Header="Typ" Binding="{Binding Typ}" Width="*" />
                <DataGridTemplateColumn Header="Akcje" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Edytuj" Width="60" Margin="5,0"/>
                                <Button Content="Usuń" Width="60" Margin="5,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>

        <!-- Przycisk Dodaj -->
        <Button Content="Dodaj" Grid.Row="2" Width="120" Height="30"
                Margin="0,10,0,20" HorizontalAlignment="Center" Click="AddTest_Click"/>
    </Grid>
</Window>
