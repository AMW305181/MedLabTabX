<Window x:Class="MedLabTab.Views.OtherViews.EditVisitAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedLabTab.Views.OtherViews"
        mc:Ignorable="d"
        Title="EditVisitAdmin" Height="450" Width="800">
    <Window.Resources>

        <!-- Style dla przycisków nawigacyjnych -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                         BorderBrush="{TemplateBinding BorderBrush}" 
                         BorderThickness="{TemplateBinding BorderThickness}"
                         CornerRadius="5">
                            <ContentPresenter Margin="{TemplateBinding Padding}" 
                                       HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE6F0"/>
                                <Setter Property="Foreground" Value="#FF69B4"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFD6E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MainHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Style dla przycisku wylogowania -->
        <Style x:Key="LogoutButtonStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Background" Value="#FFF0F0"/>
            <Setter Property="Foreground" Value="#FF5555"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                         BorderBrush="{TemplateBinding BorderBrush}" 
                         BorderThickness="{TemplateBinding BorderThickness}"
                         CornerRadius="5">
                            <ContentPresenter Margin="{TemplateBinding Padding}" 
                                       HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE0E0"/>
                                <Setter Property="Foreground" Value="#FF3333"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFD0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dla nagłówków sekcji -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF69B4"/>
            <Setter Property="Margin" Value="10,15,0,5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Style dla Separator -->
        <Style x:Key="SeparatorStyle" TargetType="Separator">
            <Setter Property="Background" Value="#EEEEEE"/>
            <Setter Property="Height" Value="1"/>
            <Setter Property="Margin" Value="0,10,0,20"/>
        </Style>


        <!-- Style przycisków -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF69B4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="#FF69B4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                             BorderBrush="{TemplateBinding BorderBrush}" 
                             BorderThickness="{TemplateBinding BorderThickness}"
                             CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5BA4"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4A94"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style tekstów -->
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Style pól tekstowych -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <!-- Dodałem rozciąganie w poziomie -->
        </Style>

        <!-- Style ComboBoxa -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style x:Key="DeleteStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF3333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="#FF3333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                      BorderBrush="{TemplateBinding BorderBrush}" 
                      BorderThickness="{TemplateBinding BorderThickness}"
                      CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF2222"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF2222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid>


        <!-- Główna treść (prawa strona) -->
        <Grid Grid.Column="1">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#f8f5ff" Offset="0"/>
                    <GradientStop Color="#fff0f5" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Tytuł -->
            <StackPanel Grid.Row="0">
                <TextBlock Style="{StaticResource MainHeaderStyle}" Text="EDYCJA WIZYTY" HorizontalAlignment="Center"/>
                <Border Height="1" Background="#EEEEEE" Margin="20,0"/>
                <TextBlock Text= "Formularz edycji wizyty w laboratorium" 
                      Foreground="#666666" 
                      FontSize="14"
                      HorizontalAlignment="Center"
                      Margin="0,-15,0,15"/>
                <Separator Style="{StaticResource SeparatorStyle}"/>
            </StackPanel>

            <!-- Środkowy panel (formularz) -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">

                <!-- Pacjent -->
                <Label Content="Pacjent:" Margin="0,5,0,2"/>
                <ComboBox x:Name="PatientComboBox" Width="200" Margin="0,0,0,5"/>

                <!-- Badania -->
                <Label Content="Badania:" Margin="0,5,0,2"/>
                <ComboBox x:Name="TestsComboBox" Width="200" Margin="0,0,0,5" SelectionChanged="TestsComboBox_SelectionChanged"/>
                <ListBox x:Name="TestsListBox" Width="228" Height="118" SelectionMode="Multiple" Margin="0,0,0,5"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0"  HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="Usuń" Style="{StaticResource DeleteStyle}" Width="120" Height="25" Click="RemoveSelectedTest_Click"/>
                </StackPanel>

                <!-- Data -->
                <Label Content="Termin:" Margin="0,5,0,2"/>
                <ComboBox x:Name="DateComboBox" Width="200" Margin="0,0,0,5"/>
                
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5">
                        <TextBlock x:Name="CostTextBlock" Text = "Koszt: " FontWeight="SemiBold" FontSize="14" Margin="0,0,10,4"/>
                        <CheckBox x:Name="IsPaidCheckBox" Content="Zapłacone" FontWeight="SemiBold" Margin="0,0,0,4" FontSize="14" Foreground="#333"/>
                    </StackPanel>
                    <TextBlock x:Name="TimeTextBlock" Text="Czas: " FontWeight="SemiBold" FontSize="14"/>
                <CheckBox x:Name="IsActiveCheckBox" Content="Wizyta aktywna" FontWeight="SemiBold" Margin="0,5,0,4" FontSize="14" Foreground="#333"/>
            </StackPanel>

            <!-- Koszt i czas -->
           

            <!-- Przyciski obok siebie -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20" Width="260"  VerticalAlignment="Bottom" >
                <Button Content="Zarejestruj" Style="{StaticResource ButtonStyle}" Width="120" Margin="5,0" Click="Register_Click"/>
                <Button Content="Anuluj" Style="{StaticResource DeleteStyle}" Width="120" Margin="5,0" Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
