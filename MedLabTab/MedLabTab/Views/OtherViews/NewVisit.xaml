<Window x:Class="MedLabTab.Views.OtherViews.NewVisit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Nowa wizyta" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Tytuł -->
            <RowDefinition/>
            <!-- Formularz -->
            <RowDefinition Height="Auto" MinHeight="92.497"/>
            <!-- Koszt i czas -->
            <RowDefinition Height="Auto"/>
            <!-- Przyciski -->
        </Grid.RowDefinitions>

        <!-- Tytuł -->
        <TextBlock Text="Nowa wizyta" Grid.Row="0" Margin="0,20,0,10" HorizontalAlignment="Center" FontSize="26" FontWeight="Bold" Width="158"/>

        <!-- Środkowy panel (formularz) -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="280" Width="200">

            <!-- Pacjent -->
            <Label Content="Pacjent:" Margin="0,5,0,2"/>
            <TextBox x:Name="PatientTextBox" Width="200" Margin="0,0,0,5"/>

            <!-- Badania -->
            <Label Content="Badania:" Margin="0,5,0,2"/>
            <ComboBox x:Name="TestsComboBox" Width="200" Margin="0,0,0,5" SelectionChanged="TestsComboBox_SelectionChanged"/>
            <ListBox x:Name="TestsListBox" Width="200" Height="60" SelectionMode="Multiple" Margin="0,0,0,5"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Usuń zaznaczone badanie" Width="200" Height="25" Click="RemoveSelectedTest_Click"/>
            </StackPanel>

            <!-- Data -->
            <Label Content="Termin:" Margin="0,5,0,2"/>
            <ComboBox x:Name="DateComboBox" Width="200" Margin="0,0,0,5"/>
        </StackPanel>

        <!-- Koszt i czas -->
        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,5,0,5" Width="250">
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5">
                <TextBlock x:Name="CostTextBlock" Text = "Koszt: " FontWeight="SemiBold" FontSize="14" Margin="0,0,80,4"/>
            </StackPanel>
            <TextBlock x:Name="TimeTextBlock" Text="Czas: " FontWeight="SemiBold" FontSize="14"/>
            <CheckBox x:Name="IsActiveCheckBox" Content="Wizyta aktywna" FontWeight="SemiBold" Margin="0,5,0,4" FontSize="14" Foreground="#333"/>
        </StackPanel>

        <!-- Przyciski obok siebie -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20" Width="260" >
            <Button Content="Anuluj" Width="120" Margin="5,0" Click="Cancel_Click"/>
            <Button Content="Zarejestruj" Width="120" Margin="5,0" Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Window>