<Window x:Class="MedLabTab.Views.OtherViews.NewVisit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Nowa wizyta" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Tytuł -->
            <RowDefinition Height="*"/>
            <!-- Formularz -->
            <RowDefinition Height="Auto"/>
            <!-- Koszt i czas -->
            <RowDefinition Height="Auto"/>
            <!-- Przyciski -->
        </Grid.RowDefinitions>

        <!-- Tytuł -->
        <TextBlock Text="Nowa wizyta" Grid.Row="0" Margin="0,20,0,10" HorizontalAlignment="Center" FontSize="26" FontWeight="Bold"/>

        <!-- Środkowy panel (formularz) -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Pacjent -->
            <Label Content="Pacjent:" Margin="0,5,0,2"/>
            <ComboBox x:Name="PacjentComboBox" Width="200" Margin="0,0,0,8"/>

            <!-- Badania -->
            <Label Content="Badania:" Margin="0,5,0,2"/>
            <ListBox x:Name="BadaniaListBox" Width="200" Height="80" SelectionMode="Multiple" Margin="0,0,0,8"/>

            <!-- Data -->
            <Label Content="Data:" Margin="0,5,0,2"/>
            <ComboBox x:Name="DataComboBox" Width="200" Margin="0,0,0,8"/>
        </StackPanel>

        <!-- Koszt i czas -->
        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,5">
            <TextBlock x:Name="KosztTextBlock" Text="Koszt: 0 zł" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,4"/>
            <TextBlock x:Name="CzasTextBlock" Text="Czas trwania: 0 min" FontWeight="SemiBold" FontSize="14"/>
        </StackPanel>

        <!-- Przyciski obok siebie -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20" >
            <Button Content="Zapłać" Width="120" Margin="5,0" Click="Zaplac_Click"/>
            <Button Content="Zarejestruj" Width="120" Margin="5,0" Click="Zarejestruj_Click"/>
        </StackPanel>
    </Grid>
</Window>
