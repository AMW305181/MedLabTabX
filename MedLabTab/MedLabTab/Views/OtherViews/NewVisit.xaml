<Window x:Class="MedLabTab.Views.OtherViews.NewVisit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Nowa wizyta" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Tytuł -->
            <RowDefinition Height="*"/>
            <!-- Formularz -->
            <RowDefinition Height="Auto"/>
            <!-- Koszt i czas -->
            <RowDefinition Height="Auto"/>
            <!-- Przyciski -->
        </Grid.RowDefinitions>

        <!-- Tytuł -->
        <TextBlock Text="Nowa wizyta" Grid.Row="0" Margin="0,20,0,10" HorizontalAlignment="Center" FontSize="26" FontWeight="Bold"/>

        <!-- Środkowy panel (formularz) -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Pacjent -->
            <Label Content="Pacjent:" Margin="0,5,0,2"/>
            <ComboBox x:Name="PatientComboBox" Width="200" Margin="0,0,0,5" SelectionChanged="PatientComboBox_SelectionChanged"/>

            <!-- Badania -->
            <Label Content="Badania:" Margin="0,5,0,2"/>
            <ComboBox x:Name="TestsComboBox" Width="200" Margin="0,0,0,5" SelectionChanged="TestsComboBox_SelectionChanged"/>
            <ListBox x:Name="TestsListBox" Width="200" Height="60" SelectionMode="Multiple" Margin="0,0,0,5"/>

            <!-- Data -->
            <Label Content="Data:" Margin="0,5,0,2"/>
            <ComboBox x:Name="DataComboBox" Width="200" Margin="0,0,0,5" SelectionChanged="DataComboBox_SelectionChanged"/>
        </StackPanel>

        <!-- Koszt i czas -->
        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,5">
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                <TextBlock x:Name="CostTextBlock" Text="Koszt" FontWeight="SemiBold" FontSize="14" Margin="0,0,60,4"/>
                <CheckBox x:Name="IsActiveCheckBox" Content="Zapłacone" FontWeight="SemiBold" Margin="0,0,0,4" FontSize="14" Foreground="#333"/>
            </StackPanel>
            <TextBlock x:Name="TimeTextBlock" Text="Cena" FontWeight="SemiBold" FontSize="14"/>
        </StackPanel>

        <!-- Przyciski obok siebie -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20" >
            <Button Content="Anuluj" Width="120" Margin="5,0" Click="Cancel_Click"/>
            <Button Content="Zarejestruj" Width="120" Margin="5,0" Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Window>
