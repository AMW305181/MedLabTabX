<Window x:Class="MedLabTab.Views.OtherViews.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Rejestracja" Height="600" Width="1000"
        Background="#f8f5ff">
    <Window.Resources>
        <!-- Style dla przycisków nawigacyjnych -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter Margin="{TemplateBinding Padding}" 
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE6F0"/>
                                <Setter Property="Foreground" Value="#FF69B4"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFD6E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dla przycisku wylogowania -->
        <Style x:Key="LogoutButtonStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Background" Value="#FFF0F0"/>
            <Setter Property="Foreground" Value="#FF5555"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter Margin="{TemplateBinding Padding}" 
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE0E0"/>
                                <Setter Property="Foreground" Value="#FF3333"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFD0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dla nagłówków sekcji -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF69B4"/>
            <Setter Property="Margin" Value="10,15,0,5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Style dla głównego nagłówka -->
        <Style x:Key="MainHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Style dla przycisków formularza -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF69B4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="#FF69B4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5BA4"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF4A94"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Pasek nawigacyjny (lewa strona) -->
        <Border Grid.Column="0" Background="White" BorderBrush="#EEEEEE" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo i nazwa -->
                <StackPanel Grid.Row="0" Margin="0,20,0,20">
                    <TextBlock Text="MedLabTab" FontSize="22" FontWeight="Bold" Foreground="#FF69B4" HorizontalAlignment="Center"/>
                    <TextBlock Text="System Laboratoryjny" FontSize="12" Foreground="#888888" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Menu nawigacyjne -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Grid.Row="1">
                        <!-- Sekcja WIZYTY -->
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="WIZYTY"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="Wszystkie wizyty" x:Name="btnAllVisits" Click="BtnAllVisits_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="Nowa wizyta" x:Name="btnNewVisit" Click="BtnNewVisit_Click"/>

                        <!-- Sekcja BADANIA -->
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="BADANIA"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="Wszystkie badania" x:Name="btnAllExams" Click="BtnAllExams_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="Nowe badanie" x:Name="btnNewExam" Click="BtnNewExam_Click"/>

                        <!-- Sekcja KONTA -->
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="KONTA"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="Wszyscy użytkownicy" x:Name="btnAllUsers" Click="BtnAllUsers_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="Zarejestruj" x:Name="btnRegister" Click="BtnRegister_Click"/>

                        <!-- Sekcja RAPORTY -->
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="RAPORTY"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="Raporty badań" x:Name="btnReports" Click="BtnReports_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="Statystyki" x:Name="btnStats" Click="BtnStats_Click"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Przycisk wylogowania -->
                <Button Grid.Row="2" 
                        Style="{StaticResource LogoutButtonStyle}" 
                        Content="Wyloguj się" 
                        x:Name="btnLogout"
                        Click="BtnLogout_Click"
                        Margin="10,20,10,20"/>
            </Grid>
        </Border>

        <!-- Główna treść (prawa strona) -->
        <Grid Grid.Column="1">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#f8f5ff" Offset="0"/>
                    <GradientStop Color="#fff0f5" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Margin="0,20,0,0">
                    <TextBlock Style="{StaticResource TextBlockStyle}" Text="Formularz rejestracji" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

                    <TextBlock Style="{StaticResource TextBlockStyle}" Text="Imię"/>
                    <TextBox Style="{StaticResource TextBoxStyle}" Name="txtName" Margin="0,0,0,15" Text=""/>

                    <TextBlock Style="{StaticResource TextBlockStyle}" Text="Nazwisko"/>
                    <TextBox Style="{StaticResource TextBoxStyle}" Name="txtSurname" Margin="0,0,0,15" Text=""/>

                    <TextBlock Style="{StaticResource TextBlockStyle}" Text="PESEL"/>
                    <TextBox Style="{StaticResource TextBoxStyle}" Name="txtPesel" Margin="0,0,0,15" Text=""/>

                    <TextBlock Style="{StaticResource TextBlockStyle}" Text="Numer telefonu"/>
                    <TextBox Style="{StaticResource TextBoxStyle}" Name="txtPhone" Margin="0,0,0,15" Text=""/>

                    <TextBlock Style="{StaticResource TextBlockStyle}" Text="Login"/>
                    <TextBox Style="{StaticResource TextBoxStyle}" Name="txtLogin" Margin="0,0,0,15" Text=""/>

                    <TextBlock Style="{StaticResource TextBlockStyle}" Text="Hasło"/>
                    <TextBox Style="{StaticResource TextBoxStyle}" Name="txtPassword" Margin="0,0,0,20"/>

                    <TextBlock Style="{StaticResource TextBlockStyle}" Text="Rola użytkownika"/>
                    <ComboBox Style="{StaticResource ComboBoxStyle}" Name="cmbUserRole">
                        <ComboBoxItem Content="Pacjent"/>
                        <ComboBoxItem Content="Recepcja"/>
                        <ComboBoxItem Content="Pielęgniarka"/>
                        <ComboBoxItem Content="Analityk"/>
                    </ComboBox>

                    <StackPanel Orientation="Horizontal" Width="300" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Style="{StaticResource ButtonStyle}" 
                                Content="Zatwierdź" 
                                Width="116" 
                                Margin="0,0,10,0" 
                                Click="btnAccept_Click"/>
                        <Button Style="{StaticResource ButtonStyle}" 
                                Content="Anuluj" 
                                Width="116" 
                                Margin="10,0,0,0" 
                                Click="btnCancel_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>