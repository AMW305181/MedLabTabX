<Window x:Class="MedLabTab.Views.OtherViews.Report"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Raport" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Tytuł -->
            <RowDefinition Height="*" />
            <!-- Formularz -->
            <RowDefinition Height="Auto"/>
            <!-- Przycisk -->
        </Grid.RowDefinitions>

        <!-- Tytuł -->
        <TextBlock Text="Raport" Grid.Row="0" Margin="0,20,0,10" HorizontalAlignment="Center" FontSize="26" FontWeight="Bold"/>

        <!-- Środkowy panel (formularz) -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,10">
            <!-- Badanie -->
            <Label Content="Badanie:" Margin="0,5,0,2"/>
            <ComboBox x:Name="BadanieComboBox" Width="200" Margin="0,0,0,5">
                <ComboBoxItem Content="Badanie 1"/>
                <ComboBoxItem Content="Badanie 2"/>
                <ComboBoxItem Content="Badanie 3"/>
            </ComboBox>

            <!-- Pacjent -->
            <Label Content="Pacjent:" Margin="0,5,0,2"/>
            <ComboBox x:Name="PacjentComboBox" Width="200" Margin="0,0,0,5">
                <ComboBoxItem Content="Pacjent 1"/>
                <ComboBoxItem Content="Pacjent 2"/>
                <ComboBoxItem Content="Pacjent 3"/>
            </ComboBox>

            <!-- Pielęgniarka -->
            <Label Content="Pielęgniarka:" Margin="0,5,0,2"/>
            <ComboBox x:Name="PielegniarkaComboBox" Width="200" Margin="0,0,0,5">
                <ComboBoxItem Content="Pielęgniarka 1"/>
                <ComboBoxItem Content="Pielęgniarka 2"/>
                <ComboBoxItem Content="Pielęgniarka 3"/>
            </ComboBox>

            <!-- Analityk -->
            <Label Content="Analityk:" Margin="0,5,0,2"/>
            <ComboBox x:Name="AnalitykComboBox" Width="200" Margin="0,0,0,5">
                <ComboBoxItem Content="Analityk 1"/>
                <ComboBoxItem Content="Analityk 2"/>
                <ComboBoxItem Content="Analityk 3"/>
            </ComboBox>

            <!-- Data -->
            <Label Content="Data:" Margin="0,5,0,2"/>
            <ComboBox x:Name="DataComboBox" Width="200" Margin="0,0,0,5">
                <ComboBoxItem Content="2025-04-01"/>
                <ComboBoxItem Content="2025-04-02"/>
                <ComboBoxItem Content="2025-04-03"/>
            </ComboBox>

            <!-- Wyniki -->
            <Label Content="Wyniki:" Margin="0,5,0,2"/>
            <TextBox x:Name="WynikiTextBox" Width="200" Height="80" Margin="0,0,0,5" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Przycisk Zapisz -->
        <Button Content="Zapisz" Grid.Row="2" Width="120" HorizontalAlignment="Center" Margin="0,10,0,20" Click="Zapisz_Click"/>
    </Grid>
</Window>
